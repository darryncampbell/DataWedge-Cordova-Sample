<?xml version='1.0' encoding='utf-8'?>
<widget id="com.zebra.datawedgecordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DataWedgeCordova</name>
    <description>
        A sample Apache Cordova application that uses DataWedge to scan barcodes.
    </description>
    <author email="support@zebra.com" href="http://www.zebra.com">
        Zebra Technologies
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="com-darryncampbell-cordova-plugin-intent" spec="^1.0.0" />
    <engine name="android" spec="~7.0.0" />
</widget>
